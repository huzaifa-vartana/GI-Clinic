<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/name"
            android:layout_width="334dp"
            android:layout_height="131dp"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:drawablePadding="8dp"
            android:fontFamily="sans-serif"
            android:text="Create an Account"
            android:textAlignment="center"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/emailTextNewAccount"
            android:layout_width="250dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/person"
            android:drawablePadding="8dp"
            android:hint="UseriD" />

        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
            android:id="@+id/passwordTextNewAccount"
            android:layout_width="250dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="8dp"
            android:hint="Password"
            android:inputType="textPassword"
            app:additionalTouchTargetSize="100dp" />

        <!--        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginBottom="30dp"-->
        <!--            android:gravity="center"-->
        <!--            android:orientation="horizontal">-->

        <!--            <RadioButton-->
        <!--                android:id="@+id/radioBtnPatient"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:defaultFocusHighlightEnabled="true"-->
        <!--                android:gravity="center"-->
        <!--                android:text="@string/patient" />-->

        <!--        </RadioGroup>-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/createAccount"
            android:layout_width="181dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:background="@drawable/roundedbutton"
            android:text="Create new account"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/note"
            android:layout_width="334dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_marginTop="175dp"
            android:drawablePadding="8dp"
            android:fontFamily="sans-serif"
            android:text="Note - This is only for Patients. Staff should contact the administration."
            android:textAlignment="center"
            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backLogin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="0dp"
            android:background="@color/colorAccent"
            android:text="Login"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>